#!/bin/bash
#PBS -P CFP01-CF-060
#PBS -j oe
#PBS -k oed
#PBS -N seahelm_evaluation
#PBS -q auto
#PBS -l select=1:ngpus=8:ncpus=8
#PBS -l walltime=56:00:00

# Change to working directory
cd $PBS_O_WORKDIR

image="/app1/common/singularity-img/hopper/cuda/cuda_12.1.0-cudnn8-devel-u20.04.sif"
module load singularity

singularity exec -e \
--env HF_HOME=/scratch/e1583535/cache \
--env HF_DATASETS_CACHE=/scratch/e1583535/cache/datasets \
$image bash << EOF > stdout.$PBS_JOBID 2> stderr.$PBS_JOBID

if [ -d "/hpctmp/e1583535/virtualenvs/sea-helm" ]; then
    source /hpctmp/e1583535/virtualenvs/sea-helm/bin/activate
fi

# running script
python /scratch/e1583535/SEA-HELM/seahelm_evaluation.py \
--tasks seahelm \
--output_dir /scratch/e1583535/SEA-HELM-scripts/output \
--model_type vllm \
--model_name /scratch/e1583535/llm/allenai/OLMo-2-0425-1B \
--model_args "enable_prefix_caching=True,tensor_parallel_size=8,gpu_memory_utilization=0.9,max_num_seqs=128"

# you can put more commands here
echo "Done"

EOF


